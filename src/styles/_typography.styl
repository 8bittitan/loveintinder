body
  font-family: "Roboto Condensed", Arial, Helvetica, sans-serif
  font-size: 14px

  @media screen and (min-width: 420px)
    font-size: 18px

h1
  font-family: Bevan, Georgia, 'Times New Roman', Times, serif
  letter-spacing: 0.25rem
  font-size: 2.5rem
  text-transform: uppercase
  margin-bottom: 2rem
  line-height: 3rem

p
  font-size: 1rem
  line-height: 1.5rem
  letter-spacing: 1px
  margin-bottom: 2rem

a
  font-size: 1rem
  text-transform: uppercase
  text-decoration: none

.SectionTitle
  font-size: 1.5rem
  letter-spacing: 1px
  text-transform: uppercase
  display: block
  margin-bottom: 1.5rem

  &::after
    display: block
    content: ""
    height: 2px
    background-color: var(--black)
    width: 8%
    margin-top: 0.5rem

  &.is-white
    color: var(--white)

    &::after
      background-color: var(--white)