@import "./_vars.styl"

.Footer
  background-color: var(--black)
  height: 150px

  &__Container
    display: flex
    align-items: center
    justify-content: space-between
    height: 100%

  &__Logo
    svg
      width: 6rem
      height: 6rem

  &__Social
    display: flex
    justify-content: space-between
    height: 100%
    align-items: center
    width: 10rem

    a
      svg
        width: 2rem
        height: 2rem

      &:hover
        svg
          fill: var(--yellow)