@import "../../styles/_vars.styl"

.Header
  background-color: var(--black)
  height: 60px

  @media screen and (min-width: 420px)
    height: 90px

  &__Container
    display: flex
    align-items: center
    justify-content: space-between
    height: 100%

  &__Logo svg
    width: 80px

    @media screen and (min-width: 420px)
      width: 150px

  &__Nav
    display: none

    @media screen and (min-width: 420px)
      display: flex
      flex-direction: row

    a
      margin-left: 1rem
      color: var(--white)

      &:hover
        color: var(--yellow)

    &.open
      display: flex
      align-items: center
      padding: 3rem 0
      position: absolute
      top: 60px
      bottom: 0
      left: 0
      right: 0
      background-color: var(--black)
      flex-direction: column

      a
        margin: 0;
        width: 100%;
        text-align: center;
        padding: 3rem;
        border-bottom: 1px solid #f1f1f1;

  &__Menu
    display: flex
    flex-direction: column
    justify-content: space-between
    height: 18px

    @media screen and (min-width: 420px)
      display: none

    span
      height: 3px
      width: 25px
      background-color: var(--white)