@import "../../styles/_vars.styl"

.Header
  background-color: var(--black)
  height: 60px

  @media screen and (min-width: 420px)
    height: 90px

  &__Container
    display: flex
    align-items: center
    justify-content: space-between
    height: 100%

  &__Logo img
    max-width: 80px

    @media screen and (min-width: 420px)
      max-width: 150px

  &__Nav
    display: none

    @media screen and (min-width: 420px)
      display: flex

    a
      margin-left: 1rem
      color: var(--white)

      &:hover
        color: var(--yellow)

  &__Menu
    display: flex
    flex-direction: column
    justify-content: space-between
    height: 18px

    @media screen and (min-width: 420px)
      display: none

    span
      height: 3px
      width: 25px
      background-color: var(--white)