@import "../../styles/_vars.styl"

.Episode
  display: flex
  align-items: center
  padding: 1rem
  border-bottom: 1px solid var(--background)
  transition: box-shadow 0.2s ease-in-out

  @media screen and (min-width: 420px)
    &:hover
      box-shadow: 8px 8px 8px rgba(50, 50, 50, 0.14), -8px 0 8px rgba(50, 50, 50, 0.14)

  &__Play,
  &__Pause
    margin-right: 1rem
    cursor: pointer

    @media screen and (min-width: 420px)
      &:hover
        path
          fill: var(--yellow)

        circle
          stroke: var(--yellow)

  &__Information
    width: 80%

    &__Title
      font-size: 1rem
      letter-spacing: 1px
      line-height: 1

      @media screen and (min-width: 420px)
        margin-bottom: 0.5rem

    &__Duration
      font-size: 0.65em
    
    &__Description
      display: none

      @media screen and (min-width: 420px)
        display: block
        font-size: 0.65rem
        letter-spacing: 1px
        line-height: 0.75rem
        margin: 0

  &__EQ
    margin-left: auto

    path
      fill: var(--background)

  &.is-playing
    .Episode__EQ path
      animation: glow 1s ease-in-out alternate infinite

      &:nth-child(1) {
        animation-delay: 0.2s
        fill: var(--red)
      }

      &:nth-child(2) {
        animation-delay: 0.4s
        fill: var(--red)
      }

      &:nth-child(3) {
        animation-delay: 0.6s
        fill: var(--red)
      }

      &:nth-child(4) {
        animation-delay: 0.8s
        fill: var(--red)
      }

      &:nth-child(5) {
        animation-delay: 1s
        fill: var(--red)
      }

@keyframes glow
  0%
    opacity 0

  50%
    opacity: 1

  100%
    opacity: 0
    