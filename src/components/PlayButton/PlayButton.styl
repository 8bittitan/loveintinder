@import "../../styles/_vars.styl"

.PlayButton
  display: flex
  align-items: center

  &__Button
    background-color: var(--yellow)
    border-radius: 50%
    height: 45px
    width: 45px
    border: 0
    outline: 0
    cursor: pointer
    margin-right: 1rem

  &__Text
    font-size: 1rem
    text-transform: uppercase
    letter-spacing: 1px